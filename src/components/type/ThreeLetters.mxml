<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark">
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:HGroup>
		<s:Group>
			<s:Rect width="100%" height="100%">
				<s:stroke>
					<s:SolidColorStroke color="black" />
				</s:stroke>
			</s:Rect>
			
			<s:VGroup width="100" 
					  height="100" >
				
				<s:Label text="{fullText.charAt(0)}" />
				
			</s:VGroup>
			
		</s:Group>
		
		<s:Label text="{fullText.charAt(1)}" />
		<s:Label text="{fullText.charAt(2)}" />
		
	</s:HGroup>
	
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			public var fullText :String = "The force is strong in this one";
			
		]]>
	</fx:Script>
</s:Group>
